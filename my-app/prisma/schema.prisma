generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       String
  image       String
  promotion   String?
}

model OpeningHours {
  id    Int    @id @default(autoincrement())
  day   String @unique
  hours String
}

model DailyContent {
  id            Int      @id @default(autoincrement())
  currentOffer  String?
  currentQuote  String?
  offerHistory  String   @default("[]")
  quoteHistory  String   @default("[]")
  updatedAt     DateTime @updatedAt
}

model Login {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
