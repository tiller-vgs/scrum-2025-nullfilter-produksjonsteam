// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/cafe.db"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       String
  image       String
  promotion   String?
}

model OpeningHours {
  id    Int    @id @default(autoincrement())
  day   String @unique
  hours String
}